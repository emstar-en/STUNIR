{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:stunir:schema:statement-wrapper:v1",
  "title": "in-toto Statement wrapper for STUNIR receipts",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "_type": {"const": "https://in-toto.io/Statement/v1"},
    "subject": {"type": "array", "minItems": 1},
    "predicateType": {"const": "urn:stunir:receipt:v1"},
    "predicate": {"$ref": "urn:stunir:schema:receipt-predicate:v1"}
  },
  "required": ["_type", "subject", "predicateType", "predicate"]
}
