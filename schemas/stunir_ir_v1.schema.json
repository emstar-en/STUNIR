{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:stunir:schema:ir:v1",
  "title": "STUNIR Intermediate Reference (IR) v1",
  "description": "Canonical representation of a program's structure and logic, ready for deterministic multi-language emission.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "ir_version",
    "module_name",
    "types",
    "functions"
  ],
  "properties": {
    "ir_version": {
      "type": "string",
      "const": "v1",
      "description": "Version tag for this IR object model."
    },
    "module_name": {
      "type": "string",
      "pattern": "^[A-Za-z_][A-Za-z0-9_]*$",
      "description": "Logical name of the module/program."
    },
    "docstring": {
      "type": "string",
      "description": "High-level description of the module."
    },
    "types": {
      "type": "array",
      "description": "List of data models/structs defined in the program. Ordering is semantically significant and must already be canonical.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "fields"
        ],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
          },
          "docstring": {
            "type": "string"
          },
          "fields": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "name",
                "type"
              ],
              "properties": {
                "name": {
                  "type": "string",
                  "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
                },
                "type": {
                  "type": "string",
                  "minLength": 1,
                  "description": "Primitive type (string,int,float,bool) or a custom type name."
                },
                "optional": {
                  "type": "boolean",
                  "default": false
                }
              }
            }
          }
        }
      }
    },
    "functions": {
      "type": "array",
      "description": "List of executable functions/endpoints. Ordering is semantically significant and must already be canonical.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "args",
          "return_type"
        ],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
          },
          "docstring": {
            "type": "string"
          },
          "args": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "name",
                "type"
              ],
              "properties": {
                "name": {
                  "type": "string",
                  "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
                },
                "type": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          },
          "return_type": {
            "type": "string",
            "minLength": 1
          },
          "steps": {
            "type": "array",
            "description": "Simplified v1 operation list (mini-AST).",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "op"
              ],
              "properties": {
                "op": {
                  "type": "string",
                  "enum": [
                    "return",
                    "call",
                    "assign",
                    "error",
                    "if",
                    "while",
                    "for",
                    "break",
                    "continue",
                    "switch",
                    "try",
                    "throw",
                    "nop"
                  ]
                },
                "target": {
                  "type": "string",
                  "description": "Target variable for assign or call operations"
                },
                "value": {
                  "type": [
                    "string",
                    "number",
                    "boolean",
                    "object",
                    "array",
                    "null"
                  ],
                  "description": "Value for assign, return, or call operations"
                },
                "condition": {
                  "type": "string",
                  "description": "Condition expression for if, while, or for operations"
                },
                "then_block": {
                  "type": "array",
                  "description": "Then block for if operation",
                  "items": {
                    "$ref": "#/properties/functions/items/properties/steps/items"
                  }
                },
                "else_block": {
                  "type": "array",
                  "description": "Else block for if operation",
                  "items": {
                    "$ref": "#/properties/functions/items/properties/steps/items"
                  }
                },
                "body": {
                  "type": "array",
                  "description": "Body block for while or for operations, or case body for switch",
                  "items": {
                    "$ref": "#/properties/functions/items/properties/steps/items"
                  }
                },
                "init": {
                  "type": "string",
                  "description": "Initialization expression for for loop"
                },
                "increment": {
                  "type": "string",
                  "description": "Increment expression for for loop"
                },
                "expr": {
                  "type": "string",
                  "description": "Switch expression"
                },
                "cases": {
                  "type": "array",
                  "description": "Case list for switch operation",
                  "items": {
                    "type": "object",
                    "required": ["value", "body"],
                    "properties": {
                      "value": {
                        "type": ["integer", "string"],
                        "description": "Case value"
                      },
                      "body": {
                        "type": "array",
                        "description": "Case body statements",
                        "items": {
                          "$ref": "#/properties/functions/items/properties/steps/items"
                        }
                      }
                    }
                  }
                },
                "default": {
                  "type": "array",
                  "description": "Default case for switch operation",
                  "items": {
                    "$ref": "#/properties/functions/items/properties/steps/items"
                  }
                },
                "try_block": {
                  "type": "array",
                  "description": "Try block for exception handling",
                  "items": {
                    "$ref": "#/properties/functions/items/properties/steps/items"
                  }
                },
                "catch_blocks": {
                  "type": "array",
                  "description": "Catch blocks for exception handling",
                  "items": {
                    "type": "object",
                    "required": ["exception_type", "body"],
                    "properties": {
                      "exception_type": {
                        "type": "string",
                        "description": "Exception type to catch (or '*' for all)"
                      },
                      "exception_var": {
                        "type": "string",
                        "description": "Variable name for caught exception"
                      },
                      "body": {
                        "type": "array",
                        "description": "Catch block statements",
                        "items": {
                          "$ref": "#/properties/functions/items/properties/steps/items"
                        }
                      }
                    }
                  }
                },
                "finally_block": {
                  "type": "array",
                  "description": "Finally block for exception handling",
                  "items": {
                    "$ref": "#/properties/functions/items/properties/steps/items"
                  }
                },
                "exception_type": {
                  "type": "string",
                  "description": "Exception type to throw"
                },
                "exception_message": {
                  "type": "string",
                  "description": "Exception message to throw"
                }
              }
            }
          }
        }
      }
    }
  }
}
