{
  "module": "single_level_control_flow_test",
  "description": "Test spec with single-level control flow for v0.8.1",
  "functions": [
    {
      "name": "test_simple_if",
      "returns": "i32",
      "params": [
        {"name": "x", "type": "i32"}
      ],
      "body": [
        {
          "type": "if",
          "condition": "x > 0",
          "then_block": [
            {"type": "return", "value": "1"}
          ],
          "else_block": [
            {"type": "return", "value": "0"}
          ]
        }
      ]
    },
    {
      "name": "test_simple_while",
      "returns": "i32",
      "params": [
        {"name": "n", "type": "i32"}
      ],
      "body": [
        {"type": "assign", "target": "i", "value": "0"},
        {"type": "assign", "target": "sum", "value": "0"},
        {
          "type": "while",
          "condition": "i < n",
          "body": [
            {"type": "assign", "target": "sum", "value": "sum + i"},
            {"type": "assign", "target": "i", "value": "i + 1"}
          ]
        },
        {"type": "return", "value": "sum"}
      ]
    },
    {
      "name": "test_simple_for",
      "returns": "i32",
      "params": [
        {"name": "max", "type": "i32"}
      ],
      "body": [
        {"type": "assign", "target": "product", "value": "1"},
        {
          "type": "for",
          "init": "i = 0",
          "condition": "i < max",
          "increment": "i = i + 1",
          "body": [
            {"type": "assign", "target": "product", "value": "product * i"}
          ]
        },
        {"type": "return", "value": "product"}
      ]
    }
  ]
}
