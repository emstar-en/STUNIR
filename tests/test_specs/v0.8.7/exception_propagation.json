{
  "schema": "stunir.spec.v1",
  "module": "propagation_test",
  "description": "Test exception propagation across functions",
  "functions": [
    {
      "name": "inner_function",
      "params": [
        {"name": "x", "type": "i32"}
      ],
      "returns": "i32",
      "body": [
        {
          "type": "if",
          "condition": "x == 0",
          "then": [
            {"type": "throw", "type": "DivisionByZero", "message": "Cannot divide by zero"}
          ]
        },
        {"type": "return", "value": "100 / x"}
      ]
    },
    {
      "name": "outer_function",
      "params": [
        {"name": "value", "type": "i32"}
      ],
      "returns": "i32",
      "body": [
        {
          "type": "try",
          "try": [
            {"type": "call", "func": "inner_function", "args": ["value"], "assign_to": "result"},
            {"type": "return", "value": "result"}
          ],
          "catch": [
            {
              "exception_type": "DivisionByZero",
              "var": "err",
              "body": [
                {"type": "assign", "target": "result", "value": "0"},
                {"type": "return", "value": "result"}
              ]
            }
          ]
        }
      ]
    }
  ]
}
