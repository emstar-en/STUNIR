{
  "schema": "stunir.spec.v1",
  "module": "level4_nesting_test",
  "description": "Test suite for v0.7.0 - 4-level nesting",
  "target": {
    "architecture": "x86",
    "format": "c",
    "standard": "c99"
  },
  "functions": [
    {
      "name": "test_4level_nesting",
      "description": "Test 4-level nested control flow",
      "params": [
        {"name": "n", "type": "i32"}
      ],
      "returns": "i32",
      "body": [
        {"type": "var_decl", "var_name": "result", "var_type": "i32", "init": "0"},
        {"type": "var_decl", "var_name": "i", "var_type": "i32", "init": "0"},
        {"type": "var_decl", "var_name": "j", "var_type": "i32", "init": "0"},
        {
          "type": "if",
          "condition": "n > 0",
          "then": [
            {
              "type": "while",
              "condition": "i < n",
              "body": [
                {
                  "type": "if",
                  "condition": "i % 2 == 0",
                  "then": [
                    {
                      "type": "for",
                      "init": "j = 0",
                      "condition": "j < i",
                      "increment": "j++",
                      "body": [
                        {"type": "assign", "target": "result", "value": "result + j"}
                      ]
                    }
                  ]
                },
                {"type": "assign", "target": "i", "value": "i + 1"}
              ]
            }
          ]
        },
        {"type": "return", "value": "result"}
      ]
    }
  ]
}
