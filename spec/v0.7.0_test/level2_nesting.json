{
  "schema": "stunir.spec.v1",
  "module": "level2_nesting_test",
  "description": "Test suite for v0.7.0 - 2-level nesting (if inside if)",
  "target": {
    "architecture": "x86",
    "format": "c",
    "standard": "c99"
  },
  "functions": [
    {
      "name": "test_if_in_if",
      "description": "Test if statement inside if statement (2-level nesting)",
      "params": [
        {"name": "x", "type": "i32"},
        {"name": "y", "type": "i32"}
      ],
      "returns": "i32",
      "body": [
        {"type": "var_decl", "var_name": "result", "var_type": "i32", "init": "0"},
        {
          "type": "if",
          "condition": "x > 0",
          "then": [
            {
              "type": "if",
              "condition": "y > 0",
              "then": [
                {"type": "assign", "target": "result", "value": "x + y"}
              ]
            }
          ]
        },
        {"type": "return", "value": "result"}
      ]
    }
  ]
}
