  "module_name": "control_flow_test",
  "docstring": "Test suite for control flow statements (if/else, while, for)",
  "types": [],
  "functions": [
    {
      "name": "test_if_else",
      "docstring": "Test if/else statement",
      "args": [
        {"name": "x", "type": "i32"}
      ],
      "return_type": "i32",
      "steps": [
        {
          "op": "if",
          "condition": "x > 0",
          "then_block": [
            {"op": "return", "value": "1"}
          ],
          "else_block": [
            {"op": "return", "value": "-1"}
          ]
        }
      ]
    },
    {
      "name": "test_while_loop",
      "docstring": "Test while loop",
      "args": [
        {"name": "n", "type": "i32"}
      ],
      "return_type": "i32",
      "steps": [
        {"op": "assign", "target": "sum", "value": "0"},
        {"op": "assign", "target": "i", "value": "0"},
        {
          "op": "while",
          "condition": "i < n",
          "body": [
            {"op": "assign", "target": "sum", "value": "sum + i"},
            {"op": "assign", "target": "i", "value": "i + 1"}
          ]
        },
        {"op": "return", "value": "sum"}
      ]
    },
    {
      "name": "test_for_loop",
      "docstring": "Test for loop",
      "args": [
        {"name": "n", "type": "i32"}
      ],
      "return_type": "i32",
      "steps": [
        {"op": "assign", "target": "sum", "value": "0"},
        {
          "op": "for",
          "init": "int i = 0",
          "condition": "i < n",
          "increment": "i++",
          "body": [
            {"op": "assign", "target": "sum", "value": "sum + i"}
          ]
        },
        {"op": "return", "value": "sum"}
      ]
    },
    {
      "name": "test_nested_if",
      "docstring": "Test nested if statements",
      "args": [
        {"name": "x", "type": "i32"},
        {"name": "y", "type": "i32"}
      ],
      "return_type": "i32",
      "steps": [
        {
          "op": "if",
          "condition": "x > 0",
          "then_block": [
            {
              "op": "if",
              "condition": "y > 0",
              "then_block": [
                {"op": "return", "value": "1"}
              ],
              "else_block": [
                {"op": "return", "value": "2"}
              ]
            }
          ],
          "else_block": [
            {"op": "return", "value": "-1"}
          ]
        }
      ]
    },
    {
      "name": "test_if_without_else",
      "docstring": "Test if statement without else",
      "args": [
        {"name": "x", "type": "i32"}
      ],
      "return_type": "i32",
      "steps": [
        {"op": "assign", "target": "result", "value": "0"},
        {
          "op": "if",
          "condition": "x > 10",
          "then_block": [
            {"op": "assign", "target": "result", "value": "100"}
          ]
        },
        {"op": "return", "value": "result"}
      ]
    }
  ]
