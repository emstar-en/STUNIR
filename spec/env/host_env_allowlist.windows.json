{
  "comment": "STRICT RUNTIME PROFILE - No implicit PATH access. All tools must be injected via STUNIR_TOOL_* vars.",
  "env_vars": {
    "allow": [
      "STUNIR_.*",
      "SYSTEMROOT",
      "WINDIR",
      "TEMP",
      "TMP"
    ],
    "deny": [
      "PATH",
      "APPDATA",
      "USERPROFILE"
    ]
  },
  "filesystem": {
    "read_only": true,
    "allow_writes": [
      "build/",
      "logs/"
    ]
  }
}